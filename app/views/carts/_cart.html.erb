<p id="notice"><%= notice %></p>

<h2>Your Cart</h2>
<table>
  <%= render(cart.line_items) %>

  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="tocal_cell"><%= number_to_currency(cart.total_price) %></td>
  </tr>

  <%= button_to 'Empty cart', cart, method: :delete, data: {confirm: 'Are you sure?'} %>
</table>